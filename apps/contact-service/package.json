    "nodemon": "^2.0.21",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.16.0",
    "typescript": "^5.5.2"
