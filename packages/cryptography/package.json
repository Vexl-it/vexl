{
  "name": "@vexl-next/cryptography",
  "version": "0.0.0",
  "type": "module",
  "main": "src/index",
  "scripts": {
    "test": "yarn jest",
    "clean": "rimraf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{js,mjs,cjs,jsx,ts,tsx,md,json}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.0.5",
    "@effect/schema": "^0.66.1",
    "@noble/secp256k1": "^2.0.0",
    "asn1.js": "^5.4.1",
    "effect": "^3.0.1",
    "fast-check": "^3.17.1",
    "fp-ts": "^2.13.1",
    "react-native-get-random-values": "^1.8.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@vexl-next/eslint-config": "0.0.0",
    "@vexl-next/prettier-config": "0.0.0",
    "@vexl-next/tsconfig": "0.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.4.1",
    "prettier": "^3.0.3",
    "rimraf": "^4.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.3.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vexl-next/eslint-config/index"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "./src"
    ],
    "transform": {
      "\\.[jt]s?$": [
        "ts-jest",
        {
          "tsconfig": {
            "allowJs": true
          }
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.[jt]s$": "$1"
    }
  },
  "prettier": "@vexl-next/prettier-config"
}
